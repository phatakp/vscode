{
    "editor.fontFamily": "Geist Mono",
    "scm.inputFontFamily": "Geist Mono",
    "chat.editor.fontFamily": "Geist Mono",
    "editor.codeLensFontFamily": "Geist Mono",
    "editor.inlayHints.fontFamily": "Geist Mono",
    "editor.inlineSuggest.fontFamily": "Geist Mono",
    "terminal.integrated.fontFamily": "Geist Mono",
    "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
    "editor.suggestFontSize": 14,
    "editor.suggestLineHeight": 27,
    "terminal.integrated.lineHeight": 1.5,
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.rightClickBehavior": "paste",
    "emmet.includeLanguages": {
        "blade": "html",
        "vue-html": "html",
        "vue": "html",
        "react": "html",
        "javascript": "html",
        "astro": "html"
    },
    "files.associations": {
        "*.css": "tailwindcss",
        "*.astro": "astro"
    },

    //Misc
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
        "source.formatDocument": "always",
        "source.fixAll": "always",
        "source.organizeImports": "always"
    },
    "editor.formatOnSave": true,
    "[astro]": {
        "editor.defaultFormatter": "astro-build.astro-vscode"
    },
    "editor.guides.highlightActiveBracketPair": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "terminal.integrated.sendKeybindingsToShell": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.preferences.includePackageJsonAutoImports": "on",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": ["-ExecutionPolicy", "Bypass"]
        }
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "python.analysis.inlayHints.callArgumentNames": "all",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
    "javascript.inlayHints.parameterNames.enabled": "all",
    "javascript.inlayHints.parameterTypes.enabled": true,
    "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
    "editor.tabSize": 4,
    "typescript.inlayHints.parameterNames.enabled": "literals",
    "workbench.colorCustomizations": {
        "[Night Owl]": {
            "editor.background": "#110f17",
            "terminal.background": "#110f17",
            "activityBar.background": "#110f17",
            "statusBar.background": "#110f17",
            "editorGroupHeader.tabsBackground": "#110f17",
            "tab.inactiveBackground": "#110f17"
        }
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always"
        },
        "editor.formatOnSave": true,
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.wordBasedSuggestions": "off"
    },
    "workbench.tree.enableStickyScroll": false,
    "editor.inlineSuggest.suppressSuggestions": true,
    "editor.padding.top": 16,
    "editor.cursorBlinking": "solid",
    "editor.stickyScroll.enabled": false,

    /**
     * Prettier
     **/
    "prettier.documentSelectors": ["**/*.astro"],
    "prettier.requireConfig": false,
    "prettier.useEditorConfig": true,
    "explorer.sortOrder": "type",
    "prettier.tabWidth": 4,
    "prettier.printWidth": 100,
    "prettier.singleAttributePerLine": false,

    "workbench.tree.indent": 15,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 100,
    "editor.rulers": [100],
    "files.autoSave": "off",
    "editor.quickSuggestions": {
        "strings": true
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "terminal.integrated.env.windows": {},
    "workbench.startupEditor": "none",
    "git.enableSmartCommit": true,
    "workbench.colorTheme": "Night Owl",
    "git.openRepositoryInParentFolders": "never",
    "custom-ui-style.electron": {
        "titleBarStyle": "hiddenInset",
        "trafficLightPosition": {
            "x": 20,
            "y": 16
        }
    },
    "custom-ui-style.stylesheet": {
        ".notification-toast": "box-shadow: none !important",
        ".quick-input-widget.show-file-icons": "box-shadow: none !important",
        ".quick-input-widget": "top: 25vh !important",
        ".quick-input-list .scrollbar": "display: none",
        ".monaco-action-bar.quick-input-inline-action-bar": "display: none",
        ".editor-widget.find-widget": "box-shadow: none; border-radius: 4px",
        ".quick-input-titlebar": "background: #100B15 !important",
        ".monaco-workbench .part.editor > .content .editor-group-container > .title.title-border-bottom:after": "display: none",
        ".monaco-scrollable-element > .shadow.top": "display: none",
        ".sidebar .title-label": "padding: 0 !important",
        ".sidebar": "border: none !important",
        ".monaco-workbench .monaco-list:not(.element-focused):focus:before": "outline: none !important",
        ".monaco-list-row.focused": "outline: none !important",
        ".monaco-editor .scroll-decoration": "display: none",
        ".title-actions": "display: none !important",
        ".title.show-file-icons .label-container .monaco-icon-label.file-icon": "justify-content: center; padding: 0 !important",
        ".title .monaco-icon-label:after": "margin-right: 0",
        ".monaco-workbench .part.editor > .content .editor-group-container > .title > .label-container > .title-label": "padding-left: 30px",
        ".title .monaco-icon-label.file-icon": "margin: 0 30px",
        ".monaco-editor .cursors-layer .cursor": "background-image: linear-gradient(135deg, #ffaffc 10%, #DA70D6 100%)"
    },
    "custom-ui-style.font.sansSerif": "Geist Mono",
    "editor.tabCompletion": "on",
    "editor.lineHeight": 2,
    "editor.fontWeight": "500",
    "editor.fontSize": 14,
    "chat.editor.lineHeight": 1.5,
    "editor.fontLigatures": true,
    "workbench.sideBar.location": "right",
    "editor.minimap.enabled": false,
    "window.commandCenter": false,
    "editor.scrollbar.vertical": "auto",
    "editor.scrollbar.horizontal": "auto",
    "breadcrumbs.filePath": "off",
    "window.zoomLevel": 1,
    "tailwindCSS.experimental.classRegex": [
        ["cva\\(((?:[^()]|\\([^()]*\\))*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
        ["base\\(((?:[^()]|\\([^()]*\\))*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
        ["cx\\(((?:[^()]|\\([^()]*\\))*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
    ],
    "workbench.iconTheme": "vscode-icons",
    "vsicons.dontShowNewVersionMessage": true
}
